<article>
  <h1><%= @article.title %></h1>
  <time><%= @article.published_at.strftime("%Y-%m-%d") %></time>

  <div>
    <%= simple_format(@article.body) %>
  </div>

  <p><%= link_to "← 記事一覧に戻る", root_path %></p>

  <% if authenticated? %>
    <p>
      <%= link_to "編集", edit_article_path(@article.slug) %>
      <%= button_to "削除", article_path(@article.slug), method: :delete, data: { confirm: "本当に削除しますか？" } %>
    </p>
  <% end %>
</article>
