<h1>SRE Devlog</h1>

<% if authenticated? %>
  <p><%= link_to "+ 記事を書く", new_article_path %></p>
<% end %>

<% @articles.each do |article| %>
  <article>
    <h2><%= link_to article.title, article_path(article.slug) %></h2>
    <time><%= article.published_at.strftime("%Y-%m-%d") %></time>
    <p><%= truncate(article.body, length: 100) %></p>

    <% if authenticated? %>
      <%= link_to "編集", edit_article_path(article.slug) %>
    <% end %>
  </article>
<% end %>
