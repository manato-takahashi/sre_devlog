<div class="articles-list">
  <% @articles.each do |article| %>
    <article class="article-card">
      <%= link_to article_path(article.slug), class: "article-card-link" do %>
        <header class="article-card-header">
          <span class="article-emoji"><%= article.emoji || "ðŸ“" %></span>
          <time class="article-date font-accent">[<%= article.published_at.strftime("%Y-%m-%d") %>]</time>
        </header>

        <h2 class="article-title"><%= article.title %></h2>

        <p class="article-excerpt text-subtle">
          <%= truncate(strip_tags(article.body), length: 120) %>
        </p>
      <% end %>
    </article>
  <% end %>
</div>
